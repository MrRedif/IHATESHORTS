{
  "manifest_version": 2,
  "name": "I HATE SHORTS",
  "version": "1.0",
  "description": "Redirect Youtube shorts to default player",
  "icons": {
    "16": "/images/icon16.png",
    "32": "/images/icon32.png",
    "48": "/images/icon48.png",
    "128": "/images/icon128.png"
  },
  "background": {"scripts":["background.js"]},
  "permissions":[
    "tabs",
    "*://*.youtube.com/*"
  ]
  
}